/app/log/nginx/*.log {
    weekly
    missingok
    rotate 4
    dateext
    notifempty
    sharedscripts
    prerotate
        if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
            run-parts /etc/logrotate.d/httpd-prerotate; \
        fi \
    endscript
    postrotate
        /opt/nginx/sbin/nginx -s reopen
    endscript
}
